<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.dao.UserDao">

    <select id="checkLogin" resultType="java.util.Map" parameterType="String">
    SELECT * FROM `user`
    WHERE `useraddress` = #{useraddress}
    AND `passwd` = #{passwd}
    </select>

    <select id="getUserMessage" resultType="java.util.Map" parameterType="string">
        SELECT * FROM `user`
        WHERE `userid` = #{userid}
    </select>

</mapper>